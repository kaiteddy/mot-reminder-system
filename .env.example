# .env.example
# Copy this file to .env and fill in your actual values

# DVLA API Settings
# Get your API key from: https://developer-portal.driver-vehicle-licensing.api.gov.uk/
DVLA_API_KEY=YOUR_DVLA_API_KEY_HERE
# Set to 'false' to use real DVLA API, 'true' for mock data (default)
USE_MOCK_DVLA=true

# Email Settings (for actual email sending)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
SENDER_EMAIL=garage@example.com

# SMS Settings (for actual SMS sending)
SMS_API_URL=https://api.sms-provider.com
SMS_API_KEY=your_api_key
SMS_SENDER_ID=GarageReminder
